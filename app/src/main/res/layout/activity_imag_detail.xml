<?xml version="1.0" encoding="utf-8"?>
<com.bilibili.magicasakura.widgets.TintRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.ImagDetailActivity">
<com.github.chrisbanes.photoview.PhotoView
    android:transitionName="@string/transition_name"
    android:id="@+id/iv_imag_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    <cn.nzy.beautifulapp.view.CircleProgressView
        android:id="@+id/pv_iv_detail"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        tc:circleColor="@color/white"
        tc:radius="50dip"
        tc:ringBgColor="#ff0"
        tc:ringColor="#f00"
        tc:strokeWidth="10dip"
        android:layout_height="wrap_content"/>
</com.bilibili.magicasakura.widgets.TintRelativeLayout>