<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">



    <com.bilibili.magicasakura.widgets.TintLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <cn.nzy.beautifulapp.view.NoScrollViewPager
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></cn.nzy.beautifulapp.view.NoScrollViewPager>


        <cn.nzy.beautifulapp.view.MyBottomTabLayout
            app:layout_behavior="@string/bottom_sheet_behavior"
            android:id="@+id/mybottomtablayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/theme_color_primary"></cn.nzy.beautifulapp.view.MyBottomTabLayout>

    </com.bilibili.magicasakura.widgets.TintLinearLayout>
</android.support.design.widget.CoordinatorLayout>